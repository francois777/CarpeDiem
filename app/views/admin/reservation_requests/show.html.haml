          - if @unavailable_facilities.any? && @unavailable_facilities.include?(@reservation_request.facility_type_2)
            %span
              = "* #{t('.fully_booked')}"
          .form-group
            = f.label :end_date_2, t(".end_date_2"), class: "col-sm-4 control-label"
            .col-sm-3
              =f.text_field :end_date_2, class: "form-control datepicker", data: {provide: "datepicker", dateFormat: "dd/mm/yyyy"}, value: display_date(@reservation_request.end_date_2)
          .form-group
            = f.label :adults_18_plus_count_2, t(".adults_18_plus_count_2"), class: "col-sm-4 control-label"
