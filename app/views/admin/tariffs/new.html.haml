- provide(:title, t(".new_tariff"))
.row
  %section.tariffs.clearfix
    %header
      %h1
        = t(".new_tariff")
      %h3
        = @accommodation_type.description  
    .row
      .col-xs-10.col-xs-offset-1.col-md-8.col-md-offset-2
        = form_for([:admin, @accommodation_type, @tariff], html: {class: "form-horizontal", role: "form"}) do |f|
          = render 'fields', f: f
          .centered
            .button.btn
              = f.submit t(".create_tariff"), class: "btn btn-large btn-primary"        
