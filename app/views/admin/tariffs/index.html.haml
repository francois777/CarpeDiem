- provide(:title, t(".tariff_list"))
.row
  .col-xs-12.col-md-12
    %section.tariffs.clearfix
      %header
        %h1
          = t(".tariff_list")
        %h3
          = @accommodation_type.description
      .table-responsive
        %table.table.tariffs
          %thead
            %tr
              %td
                %b
                  = t(".tariff_category")
              %td
                %b
                  = t(".tariff")
              %td
                %b
                  = t(".effective_date")
              %td
                %b
                  = t(".end_date")
          %tbody
            = render @tariffs || t(".no_tariffs_found")
      .row
        .actions
          -if current_user && current_user.admin?
            .button.btn
              = link_to t(".add_tariff"), new_admin_accommodation_type_tariff_path(@accommodation_type)
      