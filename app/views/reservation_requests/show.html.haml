- provide(:title, t(:reservation_request_details, scope: [:menu]))

.row
  %section.reservation-request.clearfix
    %h1
      = t(".reservation_request_details")
    .row
      .col-xs-10.col-xs-offset-1.col-md-10.col-md-offset-1
        %p
          = "Your enquiry reference number is #{@reservation_request.reservation_reference_id}"
        = form_for(@reservation_request, html: {class: "form-horizontal", role: "form"}) do |f|
          = render 'applicant_details', f: f, readonly: true
          = render 'fields1', f: f, readonly: true
          - if @reservation_request.start_date_2.is_a? Time
            = render 'fields2', f: f, readonly: true
          - if @reservation_request.start_date_2.is_a? Time
            = render 'fields3', f: f, readonly: true


