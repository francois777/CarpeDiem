- provide(:title, t(".reservation_request"))

%section.reservation-request
  %h1 
    = t(".reservation_request")
  .col-sm-7.col-xs-12
    = form_for([@reservation_request], html: {class: "form-horizontal", role: "form"}) do |f|
      = render 'applicant_details', f: f, readonly: false
      .form-group
        = label :facility_1, t(".provide_details_for_each_facility"), class: "control-label heading"
      = render 'fields1', f: f, readonly: false
      .form-group
        = label :facility_2, t(".second_facility_required"), class: "control-label heading"
        = check_box_tag t(".second_facility_required")
      = render 'fields2', f: f, readonly: false
      .form-group
        = label :facility_3, t(".third_facility_required"), class: "control-label heading"
        = check_box_tag t(".third_facility_required")
      = render 'fields3', f: f, readonly: false
      .rules
        %p 
          = t(".agree_to_abide_by_rules")
      .centered
        .button.btn
          = f.submit t(".update_and_review"), class: "btn btn-large btn-primary"  
  .col-sm-4.col-sm-offset-1.hidden-xs
    .tourism
      %h4
        Hekpoort Tourism
      %p
        More details to come
