- provide(:title, t(:account_settings, scope: [:menu]))

%section.password-reset
  %h1 
    = t(:account_settings, scope: [:menu])

  .container
    .row
      = form_for(@user, url: password_reset_path, method: :put, html: {class: "form-horizontal", role: "form"}) do |f|
        %p 
          = t(".requested_pw_reset_enter_pw", user_name: @user.full_name)
        .form-group
          = f.label :new_password, t(".new_password"), class: "col-sm-4 control-label"
          .col-sm-7
            = f.text_field :new_password, class: "form-control"
        .form-group
          = f.label :new_password_confirmation, t(".password_confirmation"), class: "col-sm-4 control-label"
          .col-sm-7
            = f.hidden_field :email
            = f.text_field :new_password_confirmation, class: "form-control"
        .centered
          .button.btn
            = f.submit t(".update"), class: "btn btn-large btn-primary"  
