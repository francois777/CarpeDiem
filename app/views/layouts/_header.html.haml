= provide(:title, t('site_name', scope: [:site]))
%header.top-banner
  .row
    .heading-pic
      = image_tag("stroompie.jpg")
    .preference.pull-right
      %p
        = link_to 'Afrikaans', afrikaans_path
      %p
        = link_to 'English', english_path    
  %nav.navbar.navbar-default.navbar-inverse.main-nav{:role => "navigation"}
    .container-fluid
      .navbar-header
        %button.navbar-toggle{:type => "button", "data-toggle" => "collapse", "data-target" => ".navbar-gnav-collapse"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      .collapse.navbar-collapse.navbar-gnav-collapse
        %ul.nav.navbar-nav.visible
          %li
            = link_to root_path do
              %i.glyphicon.glyphicon-home
          %li.dropdown
            %a.dropdown-toggle{:href => "#", :data => {:toggle => "dropdown"}} 
              = t('visit_us', scope: ['menu'])
              %b.caret
            %ul.dropdown-menu{:role => "menu"}
              %li 
                = link_to accommodation_path do
                  %i.glyphicon.glyphicon-font
                    = t('accommodation', scope: ['menu'])
              %li 
                = link_to activities_path do
                  %i.glyphicon.glyphicon-star
                    = t('activities', scope: ['menu'])
              %li 
                = link_to facilities_path do
                  %i.glyphicon.glyphicon-thumbs-up
                    = t('facilities', scope: ['menu'])
              %li
                = link_to root_path do
                  %i.glyphicon.glyphicon-cutlery
                    = t('menu', scope: ['menu'])
          %li.dropdown
            %a.dropdown-toggle{:href => "#", :data => {:toggle => "dropdown"}} 
              = t('bookings', scope: ['menu'])
              %b.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to events_path do
                  %i.glyphicon.glyphicon-bookmark
                    = t(:events, scope: [:menu])
              %li 
                = link_to tariffs_path do
                  %i.glyphicon.glyphicon-usd
                    = t('tariffs', scope: ['menu'])
              %li 
                = link_to root_path do
                  %i.glyphicon.glyphicon-book
                    = t('make_reservation', scope: ['menu'])
              %li
          %li.dropdown
            %a.dropdown-toggle{:href => "#", :data => {:toggle => "dropdown"}} 
              = t('things_to_see', scope: ['menu'])
              %b.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to root_path do
                  %i.glyphicon.glyphicon-camera
                    = t('guest_memories', scope: ['menu'])
          %li.dropdown
            %a.dropdown-toggle{:href => "#", :data => {:toggle => "dropdown"}} 
              = t('about_us', scope: ['menu'])
              %b.caret
            %ul.dropdown-menu{:role => "menu"}
              %li 
                = link_to root_path do
                  %i.glyphicon.glyphicon-phone-alt
                    = t('contact_us', scope: ['menu'])
              %li 
                = link_to directions_path do
                  %i.glyphicon.glyphicon-question-sign
                    = t('where_are_we', scope: ['menu'])
          - if signed_in?
            %li
              = link_to t(:signout, scope: [:menu]), signout_path, method: "delete"
          - else
            %li 
              = link_to t(:signin, scope: [:menu]), signin_path        