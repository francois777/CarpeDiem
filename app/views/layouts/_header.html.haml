= provide(:title, t('site_name', scope: [:site]))
%header.top-banner
  .row
    .heading-pic
      = image_tag("stroompie.jpg")
  %nav.navbar.navbar-default.navbar-inverse.main-nav{:role => "navigation"}
    .container-fluid
      .navbar-header
        %button.navbar-toggle{:type => "button", "data-toggle" => "collapse", "data-target" => ".navbar-gnav-collapse"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      .collapse.navbar-collapse.navbar-gnav-collapse
        %ul.nav.navbar-nav.visible
          %li 
            = link_to t('home', scope: ['menu']), root_path
          %li.dropdown
            %a.dropdown-toggle{:href => "#", :data => {:toggle => "dropdown"}} 
              = t('visit_us', scope: ['menu'])
              %b.caret
            %ul.dropdown-menu{:role => "menu"}
              %li 
                = link_to t('accommodation', scope: ['menu']), root_path
              %li 
                = link_to t('activities', scope: ['menu']), root_path
              %li 
                = link_to t('facilities', scope: ['menu']), facilities_url
              %li
                = link_to t('menu', scope: ['menu']), root_path
          %li.dropdown
            %a.dropdown-toggle{:href => "#", :data => {:toggle => "dropdown"}} 
              = t('bookings', scope: ['menu'])
              %b.caret
            %ul.dropdown-menu{:role => "menu"}
              %li 
                = link_to t('tariffs', scope: ['menu']), root_path
              %li 
                = link_to t('make_reservation', scope: ['menu']), root_path
              %li
          %li 
            = link_to t('things_to_see', scope: ['menu']), root_path
          %li.dropdown
            %a.dropdown-toggle{:href => "#", :data => {:toggle => "dropdown"}} 
              = t('about_us', scope: ['menu'])
              %b.caret
            %ul.dropdown-menu{:role => "menu"}
              %li 
                = link_to t('contact_us', scope: ['menu']), root_path
              %li 
                = link_to t('where_to_find_us', scope: ['menu']), directions_url
          - if signed_in?
            %li
              = link_to t(:signout, scope: [:menu]), signout_path, method: "delete"
          - else
            %li 
              = link_to t(:signin, scope: [:menu]), signin_path        